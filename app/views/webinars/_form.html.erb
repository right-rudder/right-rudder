    <%= form.label :meta_description %>
    <%= form.text_field :meta_description, class: "block shadow rounded-md border border-gray-200 outline-none px-3 py-2 mt-2 w-full" %>
  </div>

  <div class="my-5">
    <%= form.label :meta_keywords %>
