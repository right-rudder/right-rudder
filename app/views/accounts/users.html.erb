<div class="lg:pl-72 ">
  <div class="mx-auto w-full p-5">
    <h1 class="font-bold text-4xl">Users</h1>

    <% if current_user.admin? %>
      <%= form_with url: invite_user_account_path(@account), method: :post, class: "mt-5" do %>
        <%= label_tag :email, "Email" %>
        <%= text_field_tag :email %>
        <%= submit_tag "Send Invitation", class: "rounded-lg py-3 px-5 bg-blue-600 text-white font-medium cursor-pointer" %>
      <% end %>
    <% end %>

    <div class="grid grid-cols-5 mt-5">
      <div class="font-bold">Username</div>
      <div class="font-bold">Full Name</div>
      <div class="font-bold">Email</div>
      <div class="font-bold">Role</div>
      <div class="font-bold">Invitation Accepted</div>
      <%= render partial: "account_user", collection: @account_users %>
    </div>
  </div>
</div>
