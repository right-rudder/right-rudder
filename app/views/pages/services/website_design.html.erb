      </div>
      
      <!--Text-->
      <div class=" lg:w-1/2 px-3 flex flex-col items-center">
        <h1 class="text-3xl font-semibold text-center pb-5">Flight School Web Design</h1>
        <h2 class="text-5xl font-bold text-center">More Than Just a Website</h2>
        <!--Bullet points-->
        <div class="flex flex-col py-10 px-5 gap-3">
          <div class="flex flex-row ">
            <div class="text-green-500 pr-2 font-extrabold">✓</div>
            <h3 class="text-lg lg:px-10 pl-4 lg:text-xl text-left">Custom programmed content management system</h3>
          </div>
          <div class="flex flex-row ">
            <div class="text-green-500 pr-2 font-extrabold">✓</div>
            <h3 class="text-lg lg:px-10 pl-4 lg:text-xl text-left">No WordPress themes or templates</h3>
          </div>
          <div class="flex flex-row ">
            <div class="text-green-500 pr-2 font-extrabold">✓</div>
            <h3 class="text-lg lg:px-10 pl-4 lg:text-xl text-left">Multiple landing pages and automated funnels</h3>
          </div>
          <div class="flex flex-row ">
            <div class="text-green-500 pr-2 font-extrabold">✓</div>
            <h3 class="text-lg lg:px-10 pl-4 lg:text-xl text-left">Mobile friendly and works on all screen sizes</h3>
          </div>
          <div class="flex flex-row ">
            <div class="text-green-500 pr-2 font-extrabold">✓</div>
            <h3 class="text-lg lg:px-10 pl-4 lg:text-xl text-left">Fast page load speeds</h3>
          </div>
          <div class="flex flex-row ">
            <div class="text-green-500 pr-2 font-extrabold">✓</div>
            <h3 class="text-lg lg:px-10 pl-4 lg:text-xl text-left">Search engine optimized</h3>
          </div>
          <div class="flex flex-row ">
            <div class="text-green-500 pr-2 font-extrabold">✓</div>
            <h3 class="text-lg lg:px-10 pl-4 lg:text-xl text-left">Regularly updated blog and content marketing</h3>
          </div>
        </div>
        <!--Buttons-->
        <div class="flex flex-col lg:flex-row gap-5">
