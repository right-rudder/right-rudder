    <meta property="og:image" content="<%= if content_for?(:og_image) then yield(:og_image) else image_url('/images/rrmlogo.webp') end %>">

    <!-- Twitter -->
    <meta property="twitter:card" content="summary_large_image">
    <meta property="twitter:url" content="<%= request.original_url %>">
    <meta property="twitter:title" content="<%= if content_for?(:title) then yield(:title) else "Right Rudder Marketing" end %>">
    <meta property="twitter:description" content="<%= if content_for?(:meta_description) then yield(:meta_description) else 'Attract more student pilots and grow your flight school with digital marketing' end %>">
