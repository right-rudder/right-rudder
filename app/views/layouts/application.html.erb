  function gtag(){dataLayer.push(arguments);}
  gtag('js', new Date());
  gtag('config', 'G-4LJZWJYJ4M');
</script>
  <body>
    <main class="">
    <% if admin_signed_in? %>
      <!--USER MENU-->
      <%= render "shared/user_menu" %>
    <% end %>
      <%= yield %>
    </main>
  </body>
</html>
