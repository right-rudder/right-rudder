<div id="<%= dom_id sop_email %>">
  <p class="my-5">
    <strong class="block font-medium mb-1">Name:</strong>
    <%= sop_email.name %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Phone:</strong>
    <%= sop_email.phone %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Email:</strong>
    <%= sop_email.email %>
  </p>

  <% if action_name != "show" %>
    <%= link_to "Show this checklist email", sop_email, class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <%= link_to 'Edit this checklist email', edit_sop_email_path(sop_email), class: "rounded-lg py-3 ml-2 px-5 bg-gray-100 inline-block font-medium" %>
    <hr class="mt-6">
  <% end %>
</div>
