<!--Set Page font size and limit sticky-->
<div class="text-lg bg-gradient-to-r from-slate-100 to-blue-100">
  <%= render "shared/navbar" %>
  <!--Header Section-->
  <section class="grid place-items-center">
    <div class="py-20 flex flex-col lg:flex-row lg:w-5/6">
      <!--Blog image-->
      <div class="grid place-items-center">
        <%= image_tag "rrm-notams-trans.webp"%>
      </div>
      
      <!--Text about blog-->
      <div class="px-5 lg:px-0">
        <h1 class="text-5xl font-bold text-center pt-20 pb-5">Right Rudder Marketing NOTAMs</h1>
        <h2 class=" text-lg lg:text-2xl font-semibold text-center pb-5">An aviation and flying blog.<br>Learn business and marketing.<br>Hear the lastest news.</h2>
        <p class="lg:pb-20 text-md px-10 lg:text-xl text-center">The Right Rudder Marketing blog</p>
      </div>
    </div>
  </section>

  <!--Top Section-->
  <div class="flex flex-col lg:flex-row mb-10">
    
    <!--Featured Article-->
    <section class="w-full lg:w-3/5 h-screen-2/3 bg-featured-notam bg-cover bg-center flex flex-col justify-end lg:mx-5 lg:rounded-lg">
      <!--Bottom Section of image feature-->
      <div class="w-full bg-gradient-to-r from-slate-50/50 to-slate-50/50 pl-10 py-5">
        <h3 class="font-bold text-3xl">This is the featured article's title</h3>
        <div class="font-semibold text-sm">
          JAN 01 2022
        </div>
      </div>
    </section>

    <!--Side with recent articles-->
    <aside class="w-full lg:w-2/5 h-screen-2/3 flex flex-col items-center justify-between lg:mr-5">
      <h3 class="text-center font-semibold py-5 text-2xl">Recent NOTAMs</h3>
      <% @notams.last(4).reverse_each do |post| %> 
        <div class="flex flex-row items-center bg-slate-100 w-full lg:rounded-lg h-24 lg:mb-0">
          <!--image-->
          <div class="w-2/6 flex flex-row items-center">
            <%= image_tag post.feature_image.url, class: "object-cover object-center lg:rounded-l-lg h-24 "%>
            <%#= post.feature_image %><br>    
          </div>
          <div class="ml-5 w-4/6">
            <%= post.title %><br>
          </div>
        </div>
      <%end %>
    </aside>
  </div>

  <!--Hide template-->
  <div class="hidden">
  <!--Next section with categories-->
  <div class="flex flex-col lg:flex-row lg:justify-between mb-10">
