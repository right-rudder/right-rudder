<%# Head / Meta Data %>
<% title("NOTAMs - The Right Rudder Marketing Blog") %>
<% meta_description("A blog all about flight schools and marketing.  We take a look at digital marketing strategies used in the aviation industry which can help accelerate the number the of student pilots coming to your flight school.") %>
<% meta_keywords("Right Rudder Marketing, Blog, aviation webinar, aviation marketing, aviation business marketing ideas") %>
<% og_image(image_url("rrm-notams-trans.webp")) %>
<% twitter_image(image_url("rrm-notams-trans.webp")) %>


<!--Set Page font size and limit sticky-->
<div class="text-lg bg-gradient-to-r from-slate-100 to-blue-100">
  <%= render "shared/navbar" %>
  <!--Header Section-->
  <section class="grid place-items-center">
    <div class="py-20 flex flex-col lg:flex-row lg:w-5/6">
      <!--Blog image-->
      <div class="grid place-items-center">
        <%= image_tag "rrm-notams-trans.webp"%>
      </div>
      
      <!--Text about blog-->
      <div class="px-5 lg:px-0">
        <h1 class="text-5xl font-bold text-center pt-20 pb-5">Right Rudder Marketing NOTAMs</h1>
        <h2 class=" text-lg lg:text-2xl font-semibold text-center pb-5">An aviation and flying blog.<br>Learn business and marketing.<br>Hear the lastest news.</h2>
        <p class="lg:pb-20 text-md px-10 lg:text-xl text-center">The Right Rudder Marketing blog</p>
      </div>
    </div>
  </section>

  <!--Top Section-->
  <div class="flex flex-col lg:flex-row mb-10">
    
    <!--Featured Article-->
    <section class="w-full lg:w-3/5 h-screen-2/3 bg-featured-notam bg-cover bg-center flex flex-col justify-end lg:mx-5 lg:rounded-lg">
      <!--Bottom Section of image feature-->
      <div class="w-full bg-gradient-to-r from-slate-50/50 to-slate-50/50 pl-10 py-5">
        <h3 class="font-bold text-2xl lg:text-3xl">(Webinar DEC 1, 2022) Creating a website that to get more discovery flights</h3>
        <div class="font-semibold text-sm">
          JAN 01 2022
        </div>
        <div class="text-sm italic">
        Business and Marketing
        </div>
      </div>
    </section>

    <!--Side with recent articles-->
    <aside class="w-full lg:w-2/5 h-screen-2/3 flex flex-col items-center lg:justify-between lg:mr-5">
      <h3 class="text-center font-semibold py-5 text-3xl">Recent Articles</h3>
      <% @notams.published.last(4).reverse_each do |post| %> 
        <%= link_to post, class: "" do%>
        <div class="flex flex-row items-center bg-gradient-to-b from-slate-50 to-slate-200  w-full lg:rounded-lg h-24 lg:mb-0 hover:brightness-105 transition-all duration-300">
          <!--image-->
          <div class="w-2/6 flex flex-row items-center">
            <%= image_tag post.feature_image.url, class: "object-cover object-center lg:rounded-l-lg h-24 w-full"%>
            <%#= post.feature_image %><br>    
          </div>
          <div class="ml-5 w-4/6 text-md">
            <%= post.title %><br>
          </div>
        </div>
        <% end %>
      <%end %>
    </aside>
  </div>

  <!--Next section with categories-->
  <div class="flex flex-col lg:flex-row lg:justify-between pb-10">
    <!--Category 1: Business and Marketing<-->
    <div class="lg:w-1/3 lg:mx-5 flex flex-col lg:gap-3 items-center py-5 ">
      <h3 class="font-semibold pb-5 text-2xl">Business and Marketing</h3>
      <% @notams.published.business_and_marketing.last(3).reverse_each do |post| %> 
        <%= link_to post, class: "" do%>
        <div class="flex flex-row items-center bg-gradient-to-b from-slate-50 to-slate-200  w-full lg:rounded-lg h-24 lg:mb-0 hover:brightness-105 transition-all duration-300">
          <!--image-->
          <div class="w-2/6 flex flex-row items-center">
            <%= image_tag post.feature_image.url, class: "object-cover object-center lg:rounded-l-lg h-24 w-full"%>
            <%#= post.feature_image %><br>    
          </div>
          <div class="ml-5 w-4/6 text-md">
            <%= post.title %><br>
          </div>
        </div>
        <% end %>
      <%end %>
    </div>
    <!--Category 2: Aviation and Flying-->
    <div class="lg:w-1/3 lg:mx-5 flex flex-col items-center py-5 lg:gap-3 ">
      <h3 class="font-semibold pb-5 text-2xl">Aviation and Flying</h3>
      <% @notams.published.aviation_and_flying.last(3).reverse_each do |post| %> 
        <%= link_to post, class: "" do%>
        <div class="flex flex-row items-center bg-gradient-to-b from-slate-50 to-slate-200  w-full lg:rounded-lg h-24 lg:mb-0 hover:brightness-105 transition-all duration-300">
          <!--image-->
          <div class="w-2/6 flex flex-row items-center">
            <%= image_tag post.feature_image.url, class: "object-cover object-center lg:rounded-l-lg h-24 w-full"%>
            <%#= post.feature_image %><br>    
          </div>
          <div class="ml-5 w-4/6 text-md">
            <%= post.title %><br>
          </div>
        </div>
        <% end %>
      <%end %>
    </div>
    <!--Category 3: News and announcements -->
    <div class="lg:w-1/3 lg:mx-5 lg:gap-3 flex flex-col items-center py-5 ">
      <h3 class="font-semibold pb-5 text-2xl">News and Announcements</h3>
      <% @notams.published.news_and_announcements.last(3).reverse_each do |post| %> 
        <%= link_to post, class: "" do%>
        <div class="flex flex-row items-center bg-gradient-to-b from-slate-50 to-slate-200  w-full lg:rounded-lg h-24 lg:mb-0 hover:brightness-105 transition-all duration-300">
          <!--image-->
          <div class="w-2/6 flex flex-row items-center">
            <%= image_tag post.feature_image.url, class: "object-cover object-center lg:rounded-l-lg h-24 w-full"%>
            <%#= post.feature_image %><br>    
          </div>
          <div class="ml-5 w-4/6 text-md">
            <%= post.title %><br>
          </div>
        </div>
        <% end %>
      <%end %>
    </div>
  </div>
 </div>

<%= render "shared/cta1" %>
<%= render "shared/footer" %>


