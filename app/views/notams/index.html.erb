<%# Head / Meta Data %>
<% title("NOTAMs - The Right Rudder Marketing Blog") %>
<% meta_description("A blog all about flight schools and marketing.  We take a look at digital marketing strategies used in the aviation industry which can help accelerate the number the of student pilots coming to your flight school.") %>
<% meta_keywords("Right Rudder Marketing, Blog, aviation webinar, aviation marketing, aviation business marketing ideas") %>
<% og_image(image_url("/images/rrm-notams-trans.webp")) %>
<% twitter_image(image_url("/images/rrm-notams-trans.webp")) %>


<!--Set Page font size and limit sticky-->
<div class="text-lg bg-gradient-to-r from-slate-100 to-blue-100">
  <%= render "shared/navbar" %>
  <h1 class="hidden">Right Rudder Marketing Blog - announcements, business and marketing tips, aviation news</h1>
  
  <div class="bg-gradient-to-tl from-blue-950 to-slate-800 pt-10 pb-24 sm:pb-32">
    <%# Featured Article %>
    
    <% @notams.published.featured.limit(1).reverse_each do |feature| %> 
      
      <%= link_to feature, data: { turbo: false } do%>
      <div class="mx-auto max-w-7xl px-6 lg:px-8 pb-20">
        <h2 class="text-3xl font-bold tracking-tight text-gray-100 sm:text-4xl mb-10">Featured Article</h2>
        <div class="mx-auto flex max-w-2xl flex-col items-start justify-between gap-16 lg:mx-0 lg:max-w-none lg:flex-row">
          <div class="w-full lg:max-w-lg lg:flex-auto">
            
            <%= image_tag feature.feature_image, class: "aspect-[1/1] w-full rounded-2xl bg-gray-50 object-cover lg:aspect-auto lg:h-[20.5rem]"%>
            
          </div>
          <div class="w-full h-full lg:max-w-xl lg:flex-auto flex flex-col items-start">
            <h3 class="text-2xl leading-8 text-gray-100 font-bold"><%= feature.title%></h3>
            <time datetime="<%= feature.notam_date %>" class="text-gray-300 text-sm"><%= I18n.localize(feature.notam_date, :format => '%^a %^b %-d %Y') %></time>
            <p class="text-gray-300 text-sm"><%= feature.author%></p>
            <p class="text-gray-300 text-sm"><%= feature.category%></p>
            <p class="text-gray-300 pt-10"><%= feature.meta_description%></p>
          </div>
        </div>
      </div>
      <%end%>
    <%end%>


    <%# Recent Articles %>
    <div class="mx-auto max-w-7xl px-6 lg:px-8">
      <div class="mx-auto max-w-2xl text-center">
        <h2 class="text-3xl font-bold tracking-tight text-gray-200 sm:text-4xl">Recent Articles</h2>
      </div>
      <div class="mx-auto mt-16 grid max-w-2xl auto-rows-fr grid-cols-1 gap-8 sm:mt-20 lg:mx-0 lg:max-w-none lg:grid-cols-3">
        
        <% @notams.published.last(6).reverse_each do |post| %> 
          <%= link_to post, data: { turbo: false }, class: "" do%>
            <article class="relative isolate flex flex-col justify-end overflow-hidden rounded-2xl bg-gray-900 px-8 pb-8 pt-20 sm:pt-48 lg:pt-64">
              <%= image_tag post.feature_image, class: "absolute inset-0 -z-10 h-full w-full object-cover" %>
              <div class="absolute inset-0 -z-10 bg-gradient-to-t from-gray-900 via-gray-900/40"></div>
              <div class="absolute inset-0 -z-10 rounded-2xl ring-1 ring-inset ring-gray-900/10"></div>
              <div class="flex flex-wrap items-center gap-y-1 text-sm leading-6 text-gray-300">
                <time datetime="<%= post.notam_date %>" class="mr-8"><%= I18n.localize(post.notam_date, :format => '%^a %^b %-d %Y') %></time>
              </div>
              <div class="flex flex-wrap items-center gap-y-1 text-sm leading-6 text-gray-300"><%= post.author%></div>
              <div class="flex flex-wrap items-center gap-y-1 text-sm leading-6 text-gray-300"><%= post.category%></div>
              <h3 class="mt-3 text-lg font-semibold leading-6 text-white"><%= post.title%></h3>
            </article>
          <%end%>
        <%end %>
      </div>
    </div>

    <%# Business and Marketing Articles %>
    <div class="mx-auto max-w-7xl px-6 lg:px-8">
      <div class="mx-auto max-w-2xl text-center">
        <h2 class="text-3xl font-bold tracking-tight text-gray-200 sm:text-4xl pt-20">Business and Marketing Articles</h2>
        <%= link_to bm_path, data: {turbo: false} do%>
          <div class="text-gray-300 pt-3 hover:underline">Click here to view all business and marketing articles</div>
        <%end%>
      </div>
      <div class="mx-auto mt-16 grid max-w-2xl auto-rows-fr grid-cols-1 gap-8 sm:mt-20 lg:mx-0 lg:max-w-none lg:grid-cols-3">
        
        <% @notams.published.business_and_marketing.last(3).reverse_each do |post| %> 
          <%= link_to post, data: { turbo: false }, class: "" do%>
            <article class="relative isolate flex flex-col justify-end overflow-hidden rounded-2xl bg-gray-900 px-8 pb-8 pt-20 sm:pt-48 lg:pt-64">
              <%= image_tag post.feature_image, class: "absolute inset-0 -z-10 h-full w-full object-cover" %>
              <div class="absolute inset-0 -z-10 bg-gradient-to-t from-gray-900 via-gray-900/40"></div>
              <div class="absolute inset-0 -z-10 rounded-2xl ring-1 ring-inset ring-gray-900/10"></div>
              <div class="flex flex-wrap items-center gap-y-1 text-sm leading-6 text-gray-300">
                <time datetime="<%= post.notam_date %>" class="mr-8"><%= I18n.localize(post.notam_date, :format => '%^a %^b %-d %Y') %></time>
              </div>
              <div class="flex flex-wrap items-center gap-y-1 text-sm leading-6 text-gray-300"><%= post.author%></div>
              <h3 class="mt-3 text-lg font-semibold leading-6 text-white"><%= post.title%></h3>
            </article>
          <%end%>
        <%end %>
      </div>
    </div>

    
  </div>

  
  <!--Top Section-->
  <div class="flex flex-col lg:flex-row lg:justify-center lg:py-10 bg-gradient-to-r from-slate-700 to-slate-900">
    
    <!--Featured Article-->
    <% @notams.published.featured.limit(1).reverse_each do |feature| %> 
      <%= link_to feature, data: { turbo: false }, class: "w-full w-full lg:w-1/2 h-screen-1/2" do %>
      <section style="background-image: url(<%=feature.feature_image.url%>)" class="h-screen-1/2 bg-cover bg-center flex flex-col justify-end lg:mx-5 lg:rounded-lg">
        <!--Bottom Section of image feature-->
        <div class="bg-gradient-to-r from-slate-50/50 to-slate-50/50 px-10 py-5 hover:from-slate-50/60 hover:to-slate-50/60 transition-all duration-300 lg:rounded-b-lg">
          <h3 class="font-bold text-2xl lg:text-3xl line-clamp-3"><%= feature.title%></h3>
          <div class="font-semibold text-sm">
            <%= I18n.localize(feature.notam_date, :format => '%^a %^b %-d %Y') %>
          </div>
          <div class="text-sm italic">
            <%= feature.category%>
          </div>
        </div>
      </section>
      <%end%>
    <%end%>

    <!--Side with recent articles-->
    <aside class="w-full lg:w-1/3 lg:h-screen-1/2 flex flex-col items-center lg:justify-between lg:mr-5">
      <h3 class="text-center font-semibold py-5 text-2xl text-slate-200 hidden lg:block">Recent Articles</h3>
      <% @notams.published.last(3).reverse_each do |post| %> 
        <%= link_to post, data: { turbo: false }, class: "" do%>
          <div class="flex flex-row items-center  w-full lg:rounded-lg h-24 lg:mb-0 hover:brightness-105 transition-all duration-300">
            <!--image-->
            <div class="w-2/5 flex flex-row items-center">
              <%= image_tag post.feature_image.url, class: "object-cover object-center lg:rounded-l-lg h-24 w-full", alt: "picture for article: #{post.title}"%>
              <%#= post.feature_image %><br>    
            </div>
            <div class=" pl-5 w-3/5 flex flex-col justify-center items-start h-full text-md pr-5 bg-slate-50 lg:rounded-r-lg lg:bg-gradient-to-b from-slate-50 to-slate-200  ">
              <div class="line-clamp-2 text-slate-800"><%= post.title %></div>
              <div class="font-semibold text-sm pt-1">
                <%= I18n.localize(post.notam_date, :format => '%^a %^b %-d %Y') %>
              </div>
            </div>
          </div>
        <% end %>
      <%end %>
    </aside>
  </div>

  <!--Next section with categories-->
  <div class="flex flex-col lg:flex-row lg:justify-between lg:pb-10 bg-gradient-to-r from-slate-700 to-slate-900 text-slate-200">
    <!--Category 1: Business and Marketing<-->
    <div class="lg:w-1/3 lg:mx-5 flex flex-col lg:gap-5 items-center lg:py-5 ">
      <h3 class="font-semibold py-5 lg:pt-0 lg:pb-5 text-2xl">Business and Marketing</h3>
      <% @notams.published.business_and_marketing.last(5).reverse_each do |post| %> 
        <%= render "notam_category_card", post: post %>
      <%end %>
    </div>
    <!--Category 2: Aviation and Flying-->
    <div class="lg:w-1/3 lg:mx-5 flex flex-col items-center py-5 lg:gap-5 ">
      <h3 class="font-semibold pb-5 text-2xl">Aviation and Flying</h3>
      <% @notams.published.aviation_and_flying.last(5).reverse_each do |post| %> 
        <%= render "notam_category_card", post: post %>
      <%end %>
    </div>
    <!--Category 3: News and announcements -->
    <div class="lg:w-1/3 lg:mx-5 lg:gap-5 flex flex-col lg:py-5 items-center">
      <h3 class="font-semibold pb-5 text-2xl">News and Announcements</h3>
      <% @notams.published.news_and_announcements.last(5).reverse_each do |post| %> 
        <%= render "notam_category_card", post: post %> 
      <%end %>
    </div>
  </div>
</div>

<%= render "notams_blog"%>

<%= render "shared/cta1" %>
<%= render "shared/footer" %>