<%= turbo_frame_tag "new_comment" do %>
  <%= form_with model: [@account, @ticket, @comment] do |form| %>
    <%= form.rich_text_area :content, class: "w-full", placeholder: "Type your comment here..." %>
    <%= form.submit "Add this comment", class: "bg-green-600 mt-5 py-3 px-6 rounded-full text-white cursor-pointer font-medium" %>
  <% end %>
<% end %>
