<hr/>
<div id="<%= dom_id(comment) %>">
  <div class="grid grid-cols-[12rem_auto] gap-4 py-4 relative" data-controller="task-options">
    
    <%= render "comments/options", comment: comment %>

    <div class="flex justify-between gap-2">
      <div class="text-sm text-gray-600">
        <% if comment.task.due_this_week? %>
          <p class="uppercase"><%= comment.created_at.strftime("%A") %></p>
        <% end %>
        <p><%= comment.created_at.strftime("%b %e") %></p>
      </div>

      <% if comment.user.profile_image.attached?  %>
        <%= image_tag url_for(comment.user.resized_profile_image), class: "size-14 rounded-full" %>
      <% else %>
        <svg class="size-14 rounded-full bg-gray-50" viewBox="0 0 24 24" fill="currentColor">
          <path fill-rule="evenodd" d="M18.685 19.097A9.723 9.723 0 0 0 21.75 12c0-5.385-4.365-9.75-9.75-9.75S2.25 6.615 2.25 12a9.723 9.723 0 0 0 3.065 7.097A9.716 9.716 0 0 0 12 21.75a9.716 9.716 0 0 0 6.685-2.653Zm-12.54-1.285A7.486 7.486 0 0 1 12 15a7.486 7.486 0 0 1 5.855 2.812A8.224 8.224 0 0 1 12 20.25a8.224 8.224 0 0 1-5.855-2.438ZM15.75 9a3.75 3.75 0 1 1-7.5 0 3.75 3.75 0 0 1 7.5 0Z" clip-rule="evenodd" />
        </svg>
      <% end %>
    </div>
    <div>
      <p class="font-semibold"><%= comment.user.first_name %></p>
      <p><%= comment.content %></p>
    </div>
  </div>
</div>
